# DevTone Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APP CONFIGURATION
# =============================================================================
VITE_APP_NAME=DevTone
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://www.devtone.agency

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get this from your Stripe dashboard
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Google Analytics 4 Measurement ID
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Google Tag Manager ID
VITE_GTM_ID=GTM-XXXXXXX

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features (true/false)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Base URL for API calls (optional)
VITE_API_BASE_URL=https://api.devtone.agency

# API timeout in milliseconds (default: 10000)
VITE_API_TIMEOUT=10000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# These are only used in development mode

# Enable debug logging
VITE_DEBUG=true

# Mock external services in development
VITE_MOCK_SERVICES=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Content Security Policy settings (for production)
VITE_CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Email service configuration
VITE_EMAIL_SERVICE_ID=your_email_service_id

# Captcha configuration
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Social media links
VITE_SOCIAL_TWITTER=https://twitter.com/devtone
VITE_SOCIAL_LINKEDIN=https://linkedin.com/company/devtone
VITE_SOCIAL_GITHUB=https://github.com/devtone

# =============================================================================
# NOTES
# =============================================================================
# - All VITE_ prefixed variables are exposed to the client-side code
# - Never commit sensitive keys to version control
# - Use different keys for development, staging, and production
# - Regularly rotate your API keys for security
# - Test your configuration in a staging environment before production